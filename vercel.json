{
  "version": 2,
  "builds": [
    {
      "src": "project/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10",
        "maxLambdaSize": "15mb",
        "buildCommand": "pip install -r requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "project/main.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "POETRY_VIRTUALENVS_CREATE": "false"
  }
} 
